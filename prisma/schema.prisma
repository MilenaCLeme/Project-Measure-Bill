generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String @unique @default(uuid()) @db.Uuid
  cpf             String @unique @db.VarChar(15)
  name            String @db.VarChar(250)
  hashedPassword  String @db.VarChar(150)
  measures        Measure[]


  @@map("user")
}

model Measure {
  measure_uuid      String    @unique @default(uuid())
  measure_datetime  DateTime  @default(now()) @updatedAt
  meadure_type      String    
  has_confirmed     Boolean   @default(false)
  image_url         String
  customer_code     String?   @db.Uuid
  user              User?     @relation(fields: [customer_code], references: [id])


  @@map("measure")
}
